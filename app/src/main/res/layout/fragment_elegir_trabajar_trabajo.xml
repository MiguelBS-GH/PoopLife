<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trabajo.ElegirTrabajarTrabajoFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_elegir_trabajar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btns_invent_style"
            android:drawableTop="@drawable/ic_trabajo_100dp"
            android:drawablePadding="16dp"
            android:fontFamily="casual"
            android:onClick="abrir_trabajar"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/trabajar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_elegir_buscar_trabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btns_invent_style"
            android:drawableTop="@drawable/ic_buscar_100dp"
            android:drawablePadding="16dp"
            android:fontFamily="casual"
            android:onClick="abrir_lista_trabajo"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/buscar_trabajo"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>