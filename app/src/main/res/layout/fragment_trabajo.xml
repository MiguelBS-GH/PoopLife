<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/educacion_no_estudiado_style"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv__nombre_trabajo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:maxLines="2"
        android:text="@string/trabajo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_abrir_perfil_trabajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_empresa_trabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv__nombre_trabajo"
        app:layout_constraintTop_toBottomOf="@+id/tv__nombre_trabajo" />

    <TextView
        android:id="@+id/tv_tipo_trabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/atributo_tipo_style"
        android:fontFamily="casual"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:text="Tipo"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_empresa_trabajo"
        app:layout_constraintTop_toBottomOf="@+id/tv_empresa_trabajo" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/atributo_precio_style"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tipo_trabajo"
        app:layout_constraintStart_toEndOf="@+id/tv_tipo_trabajo"
        app:layout_constraintTop_toTopOf="@+id/tv_tipo_trabajo">

        <TextView
            android:id="@+id/tv_sueldo_trabajo_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text=" 0 "
            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="1dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingRight="3dp"
            android:text="@string/euros_por_hora"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_abrir_perfil_trabajo"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btns_home_style"
        android:fontFamily="casual"
        android:text="@string/abrir"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
